          </div>

        </div>
        <div class="card mb-4">
          <header class="card-header">
            <div class="row gx-3">
              <div class="col-lg-4 col-md-6 me-auto">
                <input type="text" placeholder="Search..." class="form-control">
              </div>


            </div>
          </header> <!-- card-header end// -->
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th>#ID</th>
                    <th scope="col">Name</th>
                    <th scope="col">Products Name</th>
                    <th scope="col">Total</th>
                    <th scope="col">Status</th>
                    <th scope="col">Date</th>
                    <th scope="col">Details</th>
                  </tr>
                </thead>
                <tbody>
                  <% for (let i=0; i < orderlist.length; i++) { %>
                    <tr>
                      <td>
                        <%= orderlist[i].orderId %>
                      </td>
                      <td><b>
                          <%= orderlist[i].userId ? orderlist[i].userId.username : 'N/A' %>
                        </b></td>
                      <td>
                        <% if (orderlist[i].products && orderlist[i].products.length> 0) { %>
                          <% orderlist[i].products.forEach(product=> { %>
                            <p>
                              <%= product.name %>
                            </p>
                            <% }); %>
                              <% } %>
                               
                      </td>
                      <td>
                        <%= orderlist[i].totalPrice %>
                      </td>
                      <td>
                        <% orderlist[i].products.forEach(product=> { %>

                          <p>
                          <span class="badge rounded-pill alert-warning">
                              <%= product.status %></br>
                            </span>
                          </p>
                          <% }); %>
                      </td>
                      <td>
                        <%= orderlist[i].orderDate.toDateString() %>
                      </td>
                      <td>
                        <button type="button" class="btn btn-danger btn-sm"><a
                            href="/admin/orderDetails/<%= orderlist[i].orderId %>">Details</a></button>
                      </td>
                    </tr>
                    <% } %>
                </tbody>
              </table>
            </div>
          </div>

          <!-- card-body end// -->
